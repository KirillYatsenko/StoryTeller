@model StoryTeller.ViewModels.SearchViewModel

@using (Html.BeginForm("SearchSubmit", "Story", FormMethod.Post, new { id = "formSearchStories" , @class = "navbar-form navbar-left" }))
{
        <div class="form-group">
            @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control", @id = "search-input", @placeholder = "Search for stories...", @type="text" } })
        </div>
        <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
        </button>
}

