@model StoryTeller.ViewModels.ChapterCreateViewModel

@using (Html.BeginForm("CreateNewChapter","Story",FormMethod.Post,new {id="formCreateNewChapter"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal ">
    <p class="h3" id="timerDialog" />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.StoryId, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.HiddenFor(model => model.MaxChapterLength, htmlAttributes: new { @class = "control-label col-md-2" })

    <div class="center">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control center chapterTextArea" } })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger " })
    </div>

</div>
}

