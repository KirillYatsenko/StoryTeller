@model StoryTeller.Models.AccountDetailsViewModel
@{
    ViewBag.Title = "Manage account";
}



@using (Html.BeginForm("EditUser", "Manage", FormMethod.Post, new { @id = "editUserForm", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{

    <div class="row center">
        <div class="container" style="padding-top: 60px;">
            <h1 class="page-header">Edit Profile</h1>
            <div class="row">

                <!-- left column -->
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="text-center">
                        <img id="imageHolder" style="height:230px !important; width: 230px !important;" src="@Url.Action("UserPhoto", "Account", new { userID = Model.UserID })" class="avatar img-circle img-thumbnail" alt="avatar">
                        <label for="file-upload" class="custom-file-upload" style="margin-top:10px;">
                            <span class="glyphicon glyphicon-user"></span> Change profile picture
                        </label>
                        <input id="file-upload" type="file" name="Photo" accept=".png,.jpg,.jpeg,.gif,.tif" />
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                    <h3>Personal info</h3>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.UserID)
                    @Html.HiddenFor(model => model.StoryTellerName)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.HiddenFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StoryTellerName, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.StoryTellerName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.TextAreaFor(model => model.Bio, htmlAttributes: new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-primary" value="Save Changes" type="submit">
                            <span></span>
                            <input class="btn btn-default" value="Cancel" type="reset">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}

