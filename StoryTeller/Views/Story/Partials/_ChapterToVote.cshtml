@model StoryTeller.Domain.Models.ChapterToVote


<div>
    <p class="h4 chapterVoteUser">Created by <a href="#">@Model.Chapter.User.StoryTellerName</a></p>
    <p class="h5" style="text-align:left">@Model.Chapter.Text</p>
    
    @if (Model.Story.IsVoting != null && (bool)Model.Story.IsVoting == true)
    {
        <button class="btn btn-default voteButton @Model.voteBtnStyle" @Model.voteBtnDisalbedAttr data-chapterToVoteId="@Model.ID" data-likesCount="@Model.GetLikesCount">Vote @Model.GetLikesCount</button>
    }
</div>
